//  https://codeforces.com/contest/1201/submission/118023794
// observation sum of all element must be even and biggest element of an array must be equal to or less than sum of rest of the element
#include<iostream>
#include<bits/stdc++.h>
#define int long long
using namespace std;
int main()
{
    int n;
    cin>>n;
    int a[n],sum=0;
    int i;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
        sum += a[i];
    }
    if(sum%2==0  &&  (a[n-1])<=(sum-a[n-1]))
    {
        cout<<"YES\n";
    }
    else
    {
        cout<<"NO\n";
    }
    
    return 0;
}
