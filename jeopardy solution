// question==> https://codeforces.com/problemset/problem/413/C
#include<iostream>
#include<bits/stdc++.h>
#define int long long
using namespace std;
signed main()
{
    int n,m;
    cin>>n>>m;
    int a[n],b[m],i,sum = 0;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
        sum += a[i];
    }
    int j;
    vector<int>v;
    for(j=0;j<m;j++)
    {
        cin>>b[j];
        v.emplace_back(a[b[j]-1]);
        sum -= a[b[j]-1];
    }
    sort(v.begin(),v.end(),greater<int>());
    for(i=0;i<m;i++)
    {
        if(sum > v[i])
        {
            v[i] = sum;
            sum += v[i];
        }
        else
        {
            sum += v[i]; 
        }
    }
    cout<<sum<<"\n";
    
    return 0;
}
